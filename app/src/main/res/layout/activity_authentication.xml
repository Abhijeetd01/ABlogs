<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical">
    <EditText
            style="@style/Authentication_EditText"
            android:id="@+id/username"
            android:hint="@string/et_username_hint"
            android:inputType="textWebEmailAddress"/>
    <EditText
            style="@style/Authentication_EditText"
            android:id="@+id/password"
            android:hint="@string/et_password_hint"
            android:inputType="textPassword"/>
    <Button
            style="@style/Authentication_EditText"
            android:id="@+id/signInButton"
            android:text="@string/btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button style="@style/Authentication_EditText"
            android:id="@+id/registerButton"
            android:text="@string/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>







</LinearLayout>
